{
  "name": "expressreactcampaign",
  "version": "1.0.0",
  "description": "Express Server for React/Campaign Template",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "installall": "npm i && cd client && npm i"
  },
  "author": "Sean Alexander",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "concurrently": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.13.1",
    "nodemailer": "^6.4.2",
    "react-intersection-observer": "^8.26.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.2"
  }
}
